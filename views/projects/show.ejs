<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= project.name %> - 项目管理系统</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">项目管理系统</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">项目列表</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/projects/new">新建项目</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container my-4">
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="d-flex justify-content-between align-items-center">
                    <h1><%= project.name %></h1>
                    <div>
                        <a href="/" class="btn btn-outline-secondary me-2">返回项目列表</a>
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editProjectModal">编辑项目</button>
                    </div>
                </div>
                
                <div class="row mb-3">
                    <% if (project.cover_image) { %>
                        <div class="col-md-4 mb-3">
                            <img src="<%= project.cover_image %>" alt="<%= project.name %>" class="img-fluid rounded" style="max-height: 300px; width: 100%; object-fit: cover;">
                        </div>
                        <div class="col-md-8">
                    <% } else { %>
                        <div class="col-md-12">
                    <% } %>
                        <p class="text-muted">
                            <%= project.description || '无描述' %>
                        </p>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-3 col-sm-6 mb-3">
                        <div class="card border-left-primary h-100">
                            <div class="card-body">
                                <div class="d-flex">
                                    <div class="flex-grow-1">
                                        <div class="small text-muted">项目状态</div>
                                        <div class="fw-bold"><%= project.status || '未设置' %></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 mb-3">
                        <div class="card border-left-success h-100">
                            <div class="card-body">
                                <div class="d-flex">
                                    <div class="flex-grow-1">
                                        <div class="small text-muted">开始日期</div>
                                        <div class="fw-bold"><%= project.start_date || '未设置' %></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 mb-3">
                        <div class="card border-left-info h-100">
                            <div class="card-body">
                                <div class="d-flex">
                                    <div class="flex-grow-1">
                                        <div class="small text-muted">结束日期</div>
                                        <div class="fw-bold"><%= project.end_date || '未设置' %></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 mb-3">
                        <div class="card border-left-warning h-100">
                            <div class="card-body">
                                <div class="d-flex">
                                    <div class="flex-grow-1">
                                        <div class="small text-muted">项目创建日期</div>
                                        <div class="fw-bold"><%= new Date(project.created_at).toLocaleDateString() %></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- 项目详情选项卡 -->
        <ul class="nav nav-tabs" id="projectTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="milestones-tab" data-bs-toggle="tab" data-bs-target="#milestones" type="button" role="tab" aria-controls="milestones" aria-selected="true">里程碑</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="materials-tab" data-bs-toggle="tab" data-bs-target="#materials" type="button" role="tab" aria-controls="materials" aria-selected="false">原材料状态</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="documents-tab" data-bs-toggle="tab" data-bs-target="#documents" type="button" role="tab" aria-controls="documents" aria-selected="false">文档状态</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="team-tab" data-bs-toggle="tab" data-bs-target="#team" type="button" role="tab" aria-controls="team" aria-selected="false">项目团队</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="manufacturing-tab" data-bs-toggle="tab" data-bs-target="#manufacturing" type="button" role="tab" aria-controls="manufacturing" aria-selected="false">制造计划</button>
            </li>
        </ul>

        <div class="tab-content" id="projectTabsContent">
            <!-- 里程碑标签页 -->
            <div class="tab-pane fade show active" id="milestones" role="tabpanel" aria-labelledby="milestones-tab">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h3>项目里程碑</h3>
                    <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#addMilestoneModal">
                        添加里程碑
                    </button>
                </div>
                
                <% if (milestones && milestones.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">标题</th>
                                    <th scope="col">描述</th>
                                    <th scope="col">截止日期</th>
                                    <th scope="col">状态</th>
                                    <th scope="col">操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% milestones.forEach(milestone => { %>
                                    <tr>
                                        <td><%= milestone.title %></td>
                                        <td><%= milestone.description || '无描述' %></td>
                                        <td><%= milestone.due_date || '未设置' %></td>
                                        <td><%= milestone.status || '未设置' %></td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary me-1">编辑</button>
                                            <button class="btn btn-sm btn-outline-danger" onclick="confirmDelete(event, '里程碑')">删除</button>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="alert alert-info">
                        暂无里程碑，点击"添加里程碑"按钮添加。
                    </div>
                <% } %>
            </div>
            
            <!-- 原材料标签页 -->
            <div class="tab-pane fade" id="materials" role="tabpanel" aria-labelledby="materials-tab">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h3>原材料状态</h3>
                    <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#addMaterialModal">
                        添加原材料
                    </button>
                </div>
                
                <% if (materials && materials.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">名称</th>
                                    <th scope="col">数量</th>
                                    <th scope="col">单位</th>
                                    <th scope="col">状态</th>
                                    <th scope="col">操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% materials.forEach(material => { %>
                                    <tr>
                                        <td><%= material.name %></td>
                                        <td><%= material.quantity || 0 %></td>
                                        <td><%= material.unit || '个' %></td>
                                        <td><%= material.status || '未设置' %></td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary me-1">编辑</button>
                                            <button class="btn btn-sm btn-outline-danger" onclick="confirmDelete(event, '原材料')">删除</button>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="alert alert-info">
                        暂无原材料，点击"添加原材料"按钮添加。
                    </div>
                <% } %>
            </div>
            
            <!-- 文档状态标签页 -->
            <div class="tab-pane fade" id="documents" role="tabpanel" aria-labelledby="documents-tab">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h3>文档状态</h3>
                    <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#addDocumentModal">
                        添加文档
                    </button>
                </div>
                
                <% if (documents && documents.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">标题</th>
                                    <th scope="col">状态</th>
                                    <th scope="col">上传日期</th>
                                    <th scope="col">操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% documents.forEach(document => { %>
                                    <tr>
                                        <td><%= document.title %></td>
                                        <td><%= document.status || '未设置' %></td>
                                        <td><%= new Date(document.uploaded_at).toLocaleDateString() %></td>
                                        <td>
                                            <% if (document.file_path) { %>
                                                <a href="/<%= document.file_path %>" class="btn btn-sm btn-outline-success me-1" target="_blank">查看</a>
                                            <% } %>
                                            <button class="btn btn-sm btn-outline-primary me-1">编辑</button>
                                            <button class="btn btn-sm btn-outline-danger" onclick="confirmDelete(event, '文档')">删除</button>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="alert alert-info">
                        暂无文档，点击"添加文档"按钮添加。
                    </div>
                <% } %>
            </div>
            
            <!-- 项目团队标签页 -->
            <div class="tab-pane fade" id="team" role="tabpanel" aria-labelledby="team-tab">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h3>项目团队成员</h3>
                    <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#addTeamMemberModal">
                        添加团队成员
                    </button>
                </div>
                
                <% if (teamMembers && teamMembers.length > 0) { %>
                    <div class="row">
                        <% teamMembers.forEach(member => { %>
                            <div class="col-md-4 mb-4">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h5 class="card-title"><%= member.name %></h5>
                                        <p class="card-text text-muted">
                                            <strong>角色:</strong> <%= member.role || '未设置' %><br>
                                            <strong>邮箱:</strong> <%= member.email || '未设置' %>
                                        </p>
                                        <div class="d-flex justify-content-end">
                                            <button class="btn btn-sm btn-outline-primary me-1">编辑</button>
                                            <button class="btn btn-sm btn-outline-danger" onclick="confirmDelete(event, '团队成员')">删除</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="alert alert-info">
                        暂无团队成员，点击"添加团队成员"按钮添加。
                    </div>
                <% } %>
            </div>
            
            <!-- 制造计划标签页 -->
            <div class="tab-pane fade" id="manufacturing" role="tabpanel" aria-labelledby="manufacturing-tab">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h3>制造计划</h3>
                    <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#addManufacturingPlanModal">
                        添加制造计划
                    </button>
                </div>
                
                <% if (manufacturingPlans && manufacturingPlans.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">标题</th>
                                    <th scope="col">描述</th>
                                    <th scope="col">开始日期</th>
                                    <th scope="col">结束日期</th>
                                    <th scope="col">状态</th>
                                    <th scope="col">操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% manufacturingPlans.forEach(plan => { %>
                                    <tr>
                                        <td><%= plan.title %></td>
                                        <td><%= plan.description || '无描述' %></td>
                                        <td><%= plan.start_date || '未设置' %></td>
                                        <td><%= plan.end_date || '未设置' %></td>
                                        <td><%= plan.status || '未设置' %></td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary me-1">编辑</button>
                                            <button class="btn btn-sm btn-outline-danger" onclick="confirmDelete(event, '制造计划')">删除</button>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="alert alert-info">
                        暂无制造计划，点击"添加制造计划"按钮添加。
                    </div>
                <% } %>
            </div>
        </div>

        <!-- 添加里程碑模态框 -->
        <div class="modal fade" id="addMilestoneModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">添加里程碑</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form action="/projects/<%= project.id %>/milestones" method="POST">
                        <div class="modal-body">
                            <div class="mb-3">
                                <label for="title" class="form-label">标题</label>
                                <input type="text" class="form-control" id="title" name="title" required>
                            </div>
                            <div class="mb-3">
                                <label for="milestone-description" class="form-label">描述</label>
                                <textarea class="form-control" id="milestone-description" name="description" rows="3"></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="due_date" class="form-label">截止日期</label>
                                <input type="date" class="form-control" id="due_date" name="due_date">
                            </div>
                            <div class="mb-3">
                                <label for="milestone-status" class="form-label">状态</label>
                                <select class="form-select" id="milestone-status" name="status">
                                    <option value="未开始">未开始</option>
                                    <option value="进行中">进行中</option>
                                    <option value="已完成">已完成</option>
                                    <option value="已延期">已延期</option>
                                </select>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                            <button type="submit" class="btn btn-primary">保存</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- 添加原材料模态框 -->
        <div class="modal fade" id="addMaterialModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">添加原材料</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form action="/projects/<%= project.id %>/materials" method="POST">
                        <div class="modal-body">
                            <div class="mb-3">
                                <label for="material-name" class="form-label">名称</label>
                                <input type="text" class="form-control" id="material-name" name="name" required>
                            </div>
                            <div class="mb-3">
                                <label for="quantity" class="form-label">数量</label>
                                <input type="number" class="form-control" id="quantity" name="quantity" min="0">
                            </div>
                            <div class="mb-3">
                                <label for="unit" class="form-label">单位</label>
                                <input type="text" class="form-control" id="unit" name="unit" placeholder="例如：个、件、千克">
                            </div>
                            <div class="mb-3">
                                <label for="material-status" class="form-label">状态</label>
                                <select class="form-select" id="material-status" name="status">
                                    <option value="未采购">未采购</option>
                                    <option value="已采购">已采购</option>
                                    <option value="部分到货">部分到货</option>
                                    <option value="全部到货">全部到货</option>
                                    <option value="已消耗">已消耗</option>
                                </select>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                            <button type="submit" class="btn btn-primary">保存</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- 添加文档模态框 -->
        <div class="modal fade" id="addDocumentModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">添加文档</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form action="/projects/<%= project.id %>/documents" method="POST" enctype="multipart/form-data">
                        <div class="modal-body">
                            <div class="mb-3">
                                <label for="document-title" class="form-label">标题</label>
                                <input type="text" class="form-control" id="document-title" name="title" required>
                            </div>
                            <div class="mb-3">
                                <label for="document" class="form-label">文档文件</label>
                                <input type="file" class="form-control" id="document" name="document">
                            </div>
                            <div class="mb-3">
                                <label for="document-status" class="form-label">状态</label>
                                <select class="form-select" id="document-status" name="status">
                                    <option value="草稿">草稿</option>
                                    <option value="审核中">审核中</option>
                                    <option value="已批准">已批准</option>
                                    <option value="已拒绝">已拒绝</option>
                                    <option value="已归档">已归档</option>
                                </select>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                            <button type="submit" class="btn btn-primary">保存</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- 添加团队成员模态框 -->
        <div class="modal fade" id="addTeamMemberModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">添加团队成员</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form action="/projects/<%= project.id %>/team-members" method="POST">
                        <div class="modal-body">
                            <div class="mb-3">
                                <label for="member-name" class="form-label">姓名</label>
                                <input type="text" class="form-control" id="member-name" name="name" required>
                            </div>
                            <div class="mb-3">
                                <label for="role" class="form-label">角色</label>
                                <input type="text" class="form-control" id="role" name="role">
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">邮箱</label>
                                <input type="email" class="form-control" id="email" name="email">
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                            <button type="submit" class="btn btn-primary">保存</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- 添加制造计划模态框 -->
        <div class="modal fade" id="addManufacturingPlanModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">添加制造计划</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form action="/projects/<%= project.id %>/manufacturing-plans" method="POST">
                        <div class="modal-body">
                            <div class="mb-3">
                                <label for="plan-title" class="form-label">标题</label>
                                <input type="text" class="form-control" id="plan-title" name="title" required>
                            </div>
                            <div class="mb-3">
                                <label for="plan-description" class="form-label">描述</label>
                                <textarea class="form-control" id="plan-description" name="description" rows="3"></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="plan-start-date" class="form-label">开始日期</label>
                                <input type="date" class="form-control" id="plan-start-date" name="start_date">
                            </div>
                            <div class="mb-3">
                                <label for="plan-end-date" class="form-label">结束日期</label>
                                <input type="date" class="form-control" id="plan-end-date" name="end_date">
                            </div>
                            <div class="mb-3">
                                <label for="plan-status" class="form-label">状态</label>
                                <select class="form-select" id="plan-status" name="status">
                                    <option value="未开始">未开始</option>
                                    <option value="进行中">进行中</option>
                                    <option value="已完成">已完成</option>
                                    <option value="已延期">已延期</option>
                                </select>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                            <button type="submit" class="btn btn-primary">保存</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>

    <!-- 编辑项目模态框 -->
    <div class="modal fade" id="editProjectModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">编辑项目</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="/projects/<%= project.id %>" method="POST" enctype="multipart/form-data">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="edit-name" class="form-label">项目名称</label>
                            <input type="text" class="form-control" id="edit-name" name="name" value="<%= project.name %>" required>
                        </div>
                        <div class="mb-3">
                            <label for="edit-description" class="form-label">项目描述</label>
                            <textarea class="form-control" id="edit-description" name="description" rows="3"><%= project.description || '' %></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="edit-cover-image" class="form-label">项目封面图</label>
                            <input type="file" class="form-control" id="edit-cover-image" name="cover_image" accept="image/*" onchange="previewEditImage(this)">
                            <div class="mt-2">
                                <% if (project.cover_image) { %>
                                    <img id="edit_cover_image_preview" src="<%= project.cover_image %>" alt="项目封面预览" style="max-width: 100%; max-height: 200px;" class="img-thumbnail">
                                <% } else { %>
                                    <img id="edit_cover_image_preview" src="" alt="项目封面预览" style="max-width: 100%; max-height: 200px; display: none;" class="img-thumbnail">
                                <% } %>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="edit-start-date" class="form-label">开始日期</label>
                            <input type="date" class="form-control" id="edit-start-date" name="start_date" value="<%= project.start_date || '' %>">
                        </div>
                        <div class="mb-3">
                            <label for="edit-end-date" class="form-label">结束日期</label>
                            <input type="date" class="form-control" id="edit-end-date" name="end_date" value="<%= project.end_date || '' %>">
                        </div>
                        <div class="mb-3">
                            <label for="edit-status" class="form-label">项目状态</label>
                            <select class="form-select" id="edit-status" name="status">
                                <option value="规划中" <%= project.status === '规划中' ? 'selected' : '' %>>规划中</option>
                                <option value="进行中" <%= project.status === '进行中' ? 'selected' : '' %>>进行中</option>
                                <option value="已完成" <%= project.status === '已完成' ? 'selected' : '' %>>已完成</option>
                                <option value="已延期" <%= project.status === '已延期' ? 'selected' : '' %>>已延期</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                        <button type="submit" class="btn btn-primary">保存更改</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <footer class="bg-light py-3 mt-5">
        <div class="container text-center">
            <p class="text-muted mb-0">&copy; <%= new Date().getFullYear() %> 项目管理系统</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
    <script>
        function previewEditImage(input) {
            const preview = document.getElementById('edit_cover_image_preview');
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
        
        function confirmDelete(event, type) {
            if (!confirm(`确定要删除这个${type}吗？`)) {
                event.preventDefault();
            }
        }
    </script>
</body>
</html> 