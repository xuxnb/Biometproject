<div class="row">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>项目列表</h1>
            <a href="/projects/new" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> 新建项目
            </a>
        </div>
        
        <% if (projects && projects.length) { %>
            <div class="row project-list">
                <% projects.forEach(project => { %>
                    <div class="col-md-4 mb-4">
                        <a href="/projects/<%= project.id %>" class="text-decoration-none">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title"><%= project.name %></h5>
                                    <p class="card-text text-muted">
                                        <%= project.description ? project.description.substring(0, 100) + (project.description.length > 100 ? '...' : '') : '无描述' %>
                                    </p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <% 
                                        let statusClass = '';
                                        switch(project.status) {
                                            case '进行中':
                                                statusClass = 'status-active';
                                                break;
                                            case '已完成':
                                                statusClass = 'status-completed';
                                                break;
                                            case '已延期':
                                                statusClass = 'status-delayed';
                                                break;
                                            case '规划中':
                                                statusClass = 'status-planned';
                                                break;
                                            default:
                                                statusClass = 'status-active';
                                        }
                                        %>
                                        <span class="project-status <%= statusClass %>"><%= project.status || '进行中' %></span>
                                        <small class="text-muted">
                                            开始: <%= project.start_date || '未设置' %>
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="alert alert-info" role="alert">
                暂无项目，请点击"新建项目"按钮创建一个新项目。
            </div>
        <% } %>
    </div>
</div> 